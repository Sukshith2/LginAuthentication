<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#9FB4BD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        app:cardBackgroundColor="#65A0E8"
        app:cardElevation="4dp"

        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"

        android:background="@drawable/customer_shape">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:layout_marginTop="20mm"
        android:textColor="#E40F0F"
        android:textSize="40dp"
        android:id="@+id/loginForm"
        />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the email"
            android:textColor="#F4F0F0"
            android:textStyle="bold"

            android:layout_margin="20dp"
            android:layout_below="@+id/loginForm"
            android:id="@+id/logemail"
            android:imeOptions="actionNext"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the pass"
            android:textColor="#F4F0F0"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:layout_below="@+id/logemail"
            android:id="@+id/logpass"
            android:imeOptions="actionNext"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/logpass"
                android:layout_margin="20dp"
                android:text="Login"
                android:id="@+id/btnlog"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUP"
                android:layout_below="@+id/btnlog"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:id="@+id/sign"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget Passwords"
                android:layout_below="@+id/sign"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textStyle="bold"/>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    </RelativeLayout>
</LinearLayout>